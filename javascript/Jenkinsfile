pipeline {
    agent {
        docker {
            image 'node:6-alpine'
            args '-p 3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'cd javascript; npm install'
            }
        }
        stage('Test') {
            steps {
                sh './javascript/jenkins/scripts/test.sh'
            }
        }
        stage('Deliver') {
            steps {
                sh './javascript/jenkins/scripts/deliver.sh'
                input message: 'Finished using the web site? (Click "Proceed" to continue)'
                sh './javascript/jenkins/scripts/kill.sh'
            }
        }
    }
}